# Include essential files
include LICENSE
include README.md
include pyproject.toml

# Include type hints marker
include erbf/py.typed

# Include all Python files in the package
recursive-include erbf *.py

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store

# Exclude test and development files from distribution
prune tests
prune .github
prune docs
